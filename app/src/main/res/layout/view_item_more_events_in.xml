<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvMoreEventsInLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_medium_2"
		android:layout_marginTop="@dimen/margin_xxlarge"
		android:text="@string/more_events_in_label"
		android:textColor="@android:color/black"
		android:textSize="@dimen/text_regular_3x"
		android:textStyle="bold" />

	<com.google.android.material.chip.ChipGroup
		android:id="@+id/cgMoreEventsIn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:chipSpacingHorizontal="@dimen/margin_medium_2"
		android:layout_below="@id/tvMoreEventsInLabel"
		android:layout_marginStart="@dimen/margin_medium_2"
		android:layout_marginTop="@dimen/margin_medium_3"
		android:layout_marginEnd="@dimen/margin_medium_2">

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Business" />

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Learn" />

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Tech" />

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Charity" />

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Fashion" />

		<com.google.android.material.chip.Chip
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_medium"
			android:text="Health And Wellness" />

	</com.google.android.material.chip.ChipGroup>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginStart="@dimen/margin_medium_2"
		android:layout_marginEnd="@dimen/margin_medium_2"
		android:layout_below="@id/cgMoreEventsIn"
		android:layout_marginTop="@dimen/margin_xxlarge"
		android:background="@android:color/darker_gray"/>

</RelativeLayout>